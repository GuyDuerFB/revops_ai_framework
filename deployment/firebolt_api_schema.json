{
  "openapi": "3.0.0",
  "info": {
    "title": "Firebolt Query API",
    "version": "1.0.0"
  },
  "paths": {
    "/query": {
      "post": {
        "summary": "Execute SQL query against Firebolt data warehouse",
        "operationId": "execute_query",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "SQL query to execute against Firebolt"
                  }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "results": {
                      "type": "array",
                      "items": {"type": "object"}
                    },
                    "error": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}